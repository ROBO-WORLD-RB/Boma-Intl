# Production Environment - Supabase Deployment
# NOTE: All sensitive values should be set in Supabase dashboard or environment variables, not committed to git

# Database - Supabase PostgreSQL
# Get from: https://app.supabase.com/project/[project-id]/settings/database
DATABASE_URL="postgresql://postgres:[password]@[project-id].supabase.co:5432/postgres?schema=public&sslmode=require"

# JWT - Generate a secure random string and set in environment
JWT_SECRET="your-secure-jwt-secret-here"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=production
APP_URL="https://yourdomain.com"

# Paystack - LIVE Keys (Set in environment variables)
# Get from: https://dashboard.paystack.com/settings/developer
PAYSTACK_SECRET_KEY="sk_live_your_production_secret_key"
PAYSTACK_PUBLIC_KEY="pk_live_your_production_public_key"

# Email (SMTP) - Set in environment variables
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="BOMA 2025 <noreply@boma2025.com>"
